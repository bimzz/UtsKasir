<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.thebimzz.kasir.StrukPembayaran">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Gulai Kepala Ikan" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalGulai"
                    android:text="0"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Ayam Bakar Kalasan" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalAyam"
                    android:text="0"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Iga Bakar Sambal Rujak" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalIga"
                    android:text="0"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Mendoan Anget" />

                <TextView
                    android:id="@+id/totalMendoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Sphageti Carbonara" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalSpagheti"
                    android:text="0"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Rujak Singapura" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalRujak"
                    android:text="0"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Es Teh" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalEsTeh"
                    android:text="0"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="5dp">
       <TextView
           android:textSize="20dp"
           android:layout_width="250dp"
           android:layout_height="match_parent"
           android:text="Total Harga"
           android:textStyle="bold"/>
       <TextView
           android:textSize="20dp"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="0"
           android:id="@+id/totalHarga"
            android:textStyle="bold"/>
   </LinearLayout>
</LinearLayout>
